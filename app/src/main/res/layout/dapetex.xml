<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/title_transak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rincian Transaksi"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_margin="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_trash"
                        android:drawablePadding="8dp"
                        android:paddingLeft="10dp"
                        android:text=" Kategori sampah"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:paddingTop="6dp"
                        android:text="Plastik Botol 2 Kg"
                        android:textSize="15sp" />

                    <View android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/colorgrey"
                       android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_HomeGreen"
                        android:drawablePadding="8dp"
                        android:paddingLeft="10dp"
                        android:text=" Bank Sampah"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:paddingTop="6dp"
                        android:text="jl.pahlawan komplek assunnah II 03/03 blok a no.3"
                        android:textSize="15sp" />

                    <View android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/colorgrey"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_CoinGreen"
                        android:drawablePadding="8dp"
                        android:paddingLeft="10dp"
                        android:text=" Poin yang didapat"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:paddingTop="6dp"
                        android:text="Total : 500 poin"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/dapetpoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi selesai"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="bottom|right"
                       android:layout_marginTop="50dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>