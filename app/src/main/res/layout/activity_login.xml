<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingall"
    android:orientation="vertical"
    tools:context=".loginregis.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/iconapp_green" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding20"
            android:text="@string/sign_in"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape"
            android:drawableLeft="@drawable/ic_edt_mail"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            android:hint="@string/t_edt_email"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:background="@drawable/editshape"
            android:drawableLeft="@drawable/ic_edt_password"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/tn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tnshape"
            android:layout_marginTop="@dimen/padding10"
            android:text="@string/sign_in"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/atau"
            android:gravity="center"
            android:textSize="@dimen/text16"
            android:layout_marginTop="@dimen/padding10"/>

        <Button
            android:id="@+id/tn_logingoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:background="@drawable/tnshapered"
            android:text="@string/google"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belum_punya"
            android:textSize="@dimen/text16"
            android:layout_toStartOf="@id/tvmid"/>

        <TextView
            android:id="@+id/tvmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/padding5"
            android:text="@string/akun"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding10"
            android:text="@string/sign_up"
            android:layout_toEndOf="@id/tvmid"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>






</LinearLayout>