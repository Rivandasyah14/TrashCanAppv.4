<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:padding="@dimen/padding20"
    tools:context=".loginregis.RegisterActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/iconapp_green"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding5"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_regis_user"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/ic_edt_user"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="@color/colorPrimaryLight"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="highlight"
            android:hint="@string/t_edt_username"
            android:inputType="text"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_regis_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/padding5"
            android:drawableLeft="@drawable/ic_edt_mail"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="@color/colorPrimaryLight"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="highlight"
            android:hint="@string/t_edt_email"
            android:inputType="textEmailAddress"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_regis_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/padding5"
            android:drawableLeft="@drawable/ic_edt_password"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="@color/colorPrimaryLight"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="highlight"
            android:hint="@string/password"
            android:inputType="textPassword"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_regis_conpassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/padding5"
            android:paddingLeft="@dimen/padding30"
            android:drawablePadding="@dimen/padding10"
            android:ems="10"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="@color/colorPrimaryLight"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="highlight"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/tn_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tnshape"
            android:layout_marginTop="@dimen/padding5"
            android:text="@string/sign_up"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:gravity="center"
            android:text="@string/atau"
            android:textSize="@dimen/text16"/>

        <Button
            android:id="@+id/tn_regisgoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/tnshapered"
            android:text="@string/google"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvmid"
            android:text="@string/sudah_punya"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/tvmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/padding5"
            android:text="@string/akun"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvmid"
            android:text="@string/sign_in"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>